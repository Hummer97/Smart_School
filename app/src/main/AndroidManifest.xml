<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bhartiyamonline.smart_school">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Smart_School">
        <activity android:name="com.bhartiyamonline.smart_school.Activities.LogInActivity"
            android:theme="@style/Theme.Smart_School.NoActionBar"/>
        <activity android:name="com.bhartiyamonline.smart_school.Activities.MainActivity"
            android:theme="@style/Theme.Smart_School.NoActionBar"/>
        <activity android:name="com.bhartiyamonline.smart_school.Activities.SplashScreenActivity"
            android:theme="@style/Theme.Smart_School.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>