        <TextView
            android:id="@+id/view_total_student_section_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/view_total_student_image"
            android:gravity="bottom"
            android:text="Mobile No :"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_total_student_image"
            app:layout_constraintTop_toBottomOf="@+id/view_total_student_name" />

        <TextView
            android:id="@+id/view_total_student_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/view_total_student_image"
            android:gravity="bottom"
            android:text="9999999999"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_total_student_section_txt"
            app:layout_constraintTop_toBottomOf="@+id/view_total_student_name" />

        <CheckBox
            android:id="@+id/view_total_student_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
